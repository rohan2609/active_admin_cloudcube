<%= simple_form_for(@offline_payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :customer %>
    <%= f.association :plan %>
    <%= f.input :amount %>
    <%= f.input :date %>
    <%= f.input :check_number %>
    <%= f.input :bank_name %>
    <%= f.input :date_on_check %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
