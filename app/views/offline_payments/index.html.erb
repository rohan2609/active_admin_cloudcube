<p id="notice"><%= notice %></p>

<h1>Offline Payments</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Plan</th>
      <th>Amount</th>
      <th>Date</th>
      <th>Check number</th>
      <th>Bank name</th>
      <th>Date on check</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offline_payments.each do |offline_payment| %>
      <tr>
        <td><%= offline_payment.customer %></td>
        <td><%= offline_payment.plan %></td>
        <td><%= offline_payment.amount %></td>
        <td><%= offline_payment.date %></td>
        <td><%= offline_payment.check_number %></td>
        <td><%= offline_payment.bank_name %></td>
        <td><%= offline_payment.date_on_check %></td>
        <td><%= link_to 'Show', offline_payment %></td>
        <td><%= link_to 'Edit', edit_offline_payment_path(offline_payment) %></td>
        <td><%= link_to 'Destroy', offline_payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offline Payment', new_offline_payment_path %>
